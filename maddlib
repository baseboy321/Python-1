#!/usr/bin/env python3
import colors as c
from utils import ask

print(c.clear)
print(c.green + '''
    welcome to my maddlib
    ''' + c.reset )

alex = """I like going to the {adjective1} mall and eating at the rainforest cafe
having a hotdog. I also got some {adjective2} desert that was made of frozen {liquid2}. 
My friend {friend} works at the mall. I drove away from the mall in my {type of car1} and
my car is coverd in {food1}. I like my drinks mixed with {liquid1}."""
                                                                

words = {
    'adjective1': None,
    'adjective2': None,
    'liquid2': None,
    'friend': None,
    'type of car1': None,
    'food1': None,
    'liquid1': None

}

for keyword in words:
    words[keyword] = ask(keyword + ':')

print(alex.format(**words))


